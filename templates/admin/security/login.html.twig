{% extends "base.html.twig" %}

{% block title 'Fragments - Admin | Se connecter' %}

{% block stylesheets %}
	<link href="{{ asset('styles/login.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<header>
        <h1 class="header_title">Se connecter</h1>
        <div class="header_nav"></div>
    </header>

    <main>
        {% if error %}
            <div class="error">
                <p>{{ error.messageKey | trans(error.messagedata, 'security') }}</p>
            </div>
        {% endif %}

        <form class="form" action="{{ path('security.admin.login') }}" method="post">
            <div class="form_row">
                <label for="username">Nom d'utilisateur</label>
                <input type="text" name="_username" id="username" value="{{ last_username }}">
            </div>

            <div class="form_row">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password">
            </div>

            {# <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"> #}

            <div class="form_row">
                <button class="btn" type="submit">Se connecter</button>
            </div>
        </form>
    </main>

{% endblock %}
